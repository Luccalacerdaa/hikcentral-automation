# Configurações do Backend Visit Hub
# Arquivo de configuração para TESTE LOCAL
# COPIE este arquivo para .env e configure com seus valores

# Configurações do Supabase
SUPABASE_URL=sua_url_do_supabase
SUPABASE_ANON_KEY=sua_chave_anonima_do_supabase
SUPABASE_SERVICE_ROLE_KEY=sua_chave_service_role_do_supabase

# Configurações do JWT
JWT_SECRET=sua_chave_secreta_jwt_aqui
JWT_EXPIRES_IN=7d

# Configurações do servidor
PORT=3001
NODE_ENV=development

# Configurações de upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Configurações de email (opcional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=seu_email@gmail.com
SMTP_PASS=sua_senha_de_app

# Configurações de notificação
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_PUSH_NOTIFICATIONS=false

# Configurações de limpeza automática
CLEANUP_CRON_SCHEDULE=0 2 * * *
CLEANUP_RETENTION_DAYS=30

# Configurações de segurança
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
CORS_ORIGIN=http://localhost:3000,http://localhost:5000,https://seu-dominio.vercel.app

# Configurações da automação HikCentral (CONFIGURADO!)
HIKCENTRAL_AUTOMATION_API_URL=http://localhost:5001
HIKCENTRAL_AUTOMATION_API_KEY=automation-key-2024

# Configurações de logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log 