# Configurações do Servidor de Automação HikCentral
# COPIE este arquivo para hikcentral_automation_config.env e configure com seus valores

# Chave de API para autenticação (OBRIGATÓRIO - altere para uma chave segura!)
HIKCENTRAL_AUTOMATION_API_KEY=your-secret-api-key-here

# Porta do servidor (padrão: 5000)
HIKCENTRAL_AUTOMATION_PORT=5000

# Configurações do HikCentral (OBRIGATÓRIO)
HIKCENTRAL_URL=http://45.4.132.189:3389/#/
HIKCENTRAL_USERNAME=luca
HIKCENTRAL_PASSWORD=Luca123#

# Configurações de timeout (em milissegundos)
AUTOMATION_TIMEOUT=300000
STATUS_CHECK_TIMEOUT=30000

# Configurações de retry
MAX_RETRIES=3
RETRY_DELAY=5000

# Configurações de logging
LOG_LEVEL=INFO
LOG_FILE=hikcentral_automation.log

# Configurações de segurança
ENABLE_CORS=true
ALLOWED_ORIGINS=http://localhost:3000,https://your-domain.com

# Configurações adicionais (opcional)
DEBUG_MODE=false
SAVE_SCREENSHOTS=true
HEADLESS_MODE=false 